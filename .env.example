# Public (exposed in client)
PUBLIC_SUPABASE_URL="https://YOUR_PROJECT_ID.supabase.co"
PUBLIC_SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_KEY"
# Absolute site URL used to construct canonical links in messages and OG tags
PUBLIC_SITE_URL="https://your-domain.example.com"
# Fallback WhatsApp number if product.whatsapp_number is missing
PUBLIC_DEFAULT_WA_NUMBER="+919999999999"

# Server-side only (never expose to client)
SUPABASE_SERVICE_ROLE="YOUR_SUPABASE_SERVICE_ROLE"
VERCEL_DEPLOY_HOOK="https://api.vercel.com/v1/integrations/deploy/prj_.../YOUR_HOOK"
ALLOWED_ADMIN_EMAILS="admin@example.com,owner@example.com"
# Max upload size (bytes) for product images
MAX_UPLOAD_BYTES="3000000"

# Server-side fallback WhatsApp number (used by build scripts and server utilities)
# Keep this consistent with PUBLIC_DEFAULT_WA_NUMBER unless you intentionally want different behavior.
DEFAULT_WA_NUMBER="+919999999999"

# Temp admin seeding (optional; local only)
TEMP_ADMIN_EMAIL="admin@example.com"
TEMP_ADMIN_PASSWORD="changeme123"